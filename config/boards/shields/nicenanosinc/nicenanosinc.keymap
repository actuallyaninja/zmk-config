/*
 * nicenanosinc keymap
 */

#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    keymap {
        compatible = "zmk,keymap";

// ----------------------------------------------         ----------------------------------------------------
// | ESC    |  F1  |  F2 |  F3  |  F4 |  F5 |  F6 |      |  F7 |  F8 |  F9 | F10 | F11 | F12 |    INS | DEL  |
// | GRAVE |  1   |  2  |  3   |  4  |  5  |  6  |      |  7  |  8  |  9  |  0  |  -  |  =  |   BKSPC | HOME |
// | TAB   |  Q   |  W  |  E   |  R  |  T  |          |  Y  |  U  |  I  |  O  |  P  |  [  |  ]  |  \  | PGUP |
// | LCTRL  |  A   |  S  |  D   |  F  |  G  |          |  H  |  J  |  K  |  L  |  ;  |  '  |   ENTER  | PGDN |
// | SHIFT   |  Z   |  X  |  C  |  V   |  B  |          |  N  |  M  |  ,  |  .  |  /  |  RSHFT  |  UP | END  |
// | LCTRL   | LGUI | LALT |   SPACE   | FN  |          |    SPACE    | RALT | FN | RCTRL | LFT | DWN | RGHT |
// -------------------------------------------          ------------------------------------------------------

        default_layer {
            bindings = <
    &kp ESC   &kp F1   &kp F2   &kp F3    &kp F4    &kp F5 &kp F6    /**/ &kp F7    &kp F8    &kp F9    &kp F10   &kp F11   &kp F12   &kp INS  &kp DEL
	&kp GRAVE &kp N1   &kp N2   &kp N3    &kp N4    &kp N5 &kp N6    /**/ &kp N7    &kp N8    &kp N9    &kp N0    &kp MINUS &kp EQUAL &kp BSPC &kp HOME
    &kp TAB   &kp Q    &kp W    &kp E     &kp R     &kp T  &kp Y     /**/ &kp U     &kp I     &kp O     &kp P     &kp LBKT  &kp RBKT  &kp BSLH &kp PG_UP
    &kp LCTRL &kp A    &kp S    &kp D     &kp F     &kp G  &trans    /**/ &kp H     &kp J     &kp K     &kp L     &kp SEMI  &kp SQT   &kp RET  &kp PG_DN
    &kp LSHFT &kp Z    &kp X    &kp C     &kp V     &kp B  &trans    /**/ &kp N     &kp M     &kp COMMA &kp DOT   &kp FSLH  &kp RSHFT &kp UP   &kp END
    &kp LCTRL &kp LGUI &mo 1    &kp LALT  &kp SPACE &trans &trans    /**/ &trans    &kp SPACE &kp RALT  &kp RCTRL &mo 1     &kp LEFT  &kp DOWN &kp RIGHT
            >;
        };

// ----------------------------------------------     -----------------------------------------------------
// |BT_CLR|      |     |      |     |     |     |     |     |     |     |     |     |        |     |BT_CLR|
// |       | BT-0 | BT-1| BT-2 |     |     |       |     |     |     |     |     |     |     |     |      |
// |        |      |     |      |     |     |       |     |     |     |     |     |     |          |      |
// |         |      |     |     |      |     |       |     |     |     |     |     |         |     |      |
// |         |      |      |           |     |       |             |      |    |       |     |     |      |
// -------------------------------------------       ------------------------------------------------------

        fn_layer {
            bindings = <
    &bt BT_CLR &trans       &trans       &trans       &trans &trans &trans /**/ &trans &trans &trans &trans  &trans  &trans  &trans &bt BT_CLR
    &trans     &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &trans &trans &trans /**/ &trans &trans &trans &trans  &trans  &trans  &trans &trans 
    &trans     &trans       &trans       &trans       &trans &trans &trans /**/ &trans &trans &trans &trans  &trans  &trans  &trans &trans
    &trans     &trans       &trans       &trans       &trans &trans &trans /**/ &trans &trans &trans &trans  &trans  &trans  &trans &trans
    &trans     &trans       &trans       &trans       &trans &trans &trans /**/ &trans &trans &trans &trans  &trans  &trans  &trans &trans
            >;
        };
    };
};